 <nav class="navigation">
    <button class="menu-button" id="menuButton" aria-label="Menu" aria-expanded="false">
        <span class="icon">☰</span>
    </button>
    <div class="menu-content" id="menuContent">
        <a href="/" class="menu-item">Inicio</a>
        <a href="/blog" class="menu-item">Entradas</a>
        <a href="/about/" class="menu-item">Sobre mí</a>
    </div>
</nav>

<style>
    .navigation {
        position: fixed;
        top: 2.5rem;
        left: -2.5rem; /* Posición inicial oculta */
        z-index: 1000;
        transition: left 0.4s ease; /* Animación suave */
    }

    .navigation:hover {
        left: 2rem; /* Se mueve a la derecha al hacer hover */
    }

	.menu-button {
		width: 3rem;
		height: 3rem;
		border-radius: 50%;
		background-color: rgba(0, 0, 0, 0.7);
		color: white;
		border: none;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0;
        transition: transform 0.3s ease; /* Animación del botón */
    }

    .icon {
		font-size: 1.5rem;
	}

    .menu-content {
        position: absolute;
        top: 0;
        left: 4rem; /* Posición a la derecha del botón */
        background-color: rgba(0, 0, 0, 0.9);
        padding: 1rem;
        border-radius: 0.5rem;
        display: none;
        flex-direction: column;
        gap: 1rem;
        min-width: 200px;
        opacity: 0;
        transform: translateX(-20px);
        transition: opacity 0.3s ease, transform 0.3s ease; /* Animación suave */
    }

    .menu-content.active {
        display: flex;
        opacity: 1;
        transform: translateX(0);
    }

    .menu-item {
        color: white;
        text-decoration: none;
        font-size: 1.1rem;
        transition: color 0.2s ease;
    }

    .menu-item:hover {
        color: #ccc;
    }
</style>

<script>
    const menuButton = document.getElementById('menuButton');
    const menuContent = document.getElementById('menuContent');

    menuButton?.addEventListener('click', () => {
        const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
        menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
        menuContent?.classList.toggle('active');
    });
</script>